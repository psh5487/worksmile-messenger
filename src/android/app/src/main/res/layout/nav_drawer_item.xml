<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_member_chatNav"
        style="@style/ChatDrawerItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:drawableStart="@drawable/drawable_left_group"
        android:drawableTint="@color/main_gray"
        android:text="대화상대 목록"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_invite_chatNav"
        style="@style/ChatDrawerItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/drawable_left_add_person"
        android:drawableTint="@color/main_gray"
        android:text="대화상대 초대"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_member_chatNav" />

    <Button
        android:id="@+id/btn_notice_chatNav"
        style="@style/ChatDrawerItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/drawable_left_noti"
        android:drawableTint="@color/main_gray"
        android:text="공지"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_invite_chatNav" />

    <Button
        android:id="@+id/btn_link_chatNav"
        style="@style/ChatDrawerItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/drawable_left_link"
        android:drawableTint="@color/main_gray"
        android:text="링크"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_notice_chatNav" />

    <Button
        android:id="@+id/btn_image_chatNav"
        style="@style/ChatDrawerItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/drawable_left_attach_image"
        android:drawableTint="@color/main_gray"
        android:text="사진"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_link_chatNav" />

    <Button
        android:id="@+id/btn_file_chatNav"
        style="@style/ChatDrawerItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/drawable_left_attach_file"
        android:drawableTint="@color/main_gray"
        android:text="파일"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_image_chatNav" />

    <TextView
        android:id="@+id/tv_exit_chatNav"
        style="@style/ChatDrawerItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="채팅방 나가기"
        android:textColor="@color/sub_red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>